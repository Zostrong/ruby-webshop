<div class="section">
  <div class="container">
    <div class="col col-md-6 col-md-offset-3">
    <h2 class="title">Új regisztráció</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <div class="form-group">
      <%= f.input :name, label: 'Felhasználónév', required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
      </div>

      <div class="form-group">
      <%= f.input :email, label: 'Email cím', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
      </div>

      <div class="form-group">
        <%= f.input :city, label: 'Város', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
      </div>

      <div class="form-group">
        <%= f.input :postcode, label:'Irányítószám', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
      </div>

      <div class="form-group">
        <%= f.input :address, label:'Lakcím', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
      </div>

      <div class="form-group">
        <%= f.input :password, label:'Jelszó', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation, label:'Jelszó megerősítése', required: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label" } %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Regisztráció", class:"btn btn-primary" %>
      </div>

    <% end %>
      <br />
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>