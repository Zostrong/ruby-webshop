
<%= simple_form_for @product, html: { multipart: true } do |f| %>
  <div class="col col-md-6 col-md-offset-3">

    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-group">
      <%= f.input :brand,label:'Márka', required: true, input_html: { class:"form-control" }, prompt: "Válassz márkát",
                  collection: Product::BRAND, wrapper: false, label_html: { class:"label" } %>
    </div>
    <div class="form-group">
      <%= f.input :model, label:'Terméknév', required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
    </div>

    <div class="form-group">
      <%= f.input :category, label:'Kategória', required: true, prompt: "Válassz kategóriát", collection: Product::CATEGORY,
                   input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
    </div>


    <div class="form-group">
      <%= f.input :description, label:'Leírás', required: false, input_html: { class:"form-control", maxlength: 1000 }, wrapper: false, label_html: { class:"label" } %>
    </div>
    <div class="form-group">
      <%= f.input :price, label:'Ár', required: true, input_html: { class:"form-control", maxlength: 7 }, wrapper: false, label_html: { class:"label" } %>
    </div>

    <div class="form-group">
        <%= f.input :image, label:'Kép feltöltése', as: :file, input_html: { class:"form-control-file" }, wrapper: false, label_html: { class:"label" } %>
    </div>

    <div class="form-group">
      <%= f.button :submit, "Feltöltés", class:"btn btn-primary" %>
    </div>

  </div>
<% end %>
